<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorBlackAlpha70" />
                </shape>
            </item>
            <item android:bottom="@dimen/dp_10" android:drawable="@drawable/ic_camera_grey" android:end="@dimen/dp_10" android:gravity="center" android:start="@dimen/dp_10" android:top="@dimen/dp_10" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTransparentBg" />
                </shape>
            </item>
            <item android:bottom="@dimen/dp_10" android:drawable="@drawable/ic_camera" android:end="@dimen/dp_10" android:gravity="center" android:start="@dimen/dp_10" android:top="@dimen/dp_10" />
        </layer-list>
    </item>
</selector>
